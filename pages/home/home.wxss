/* pages/home/home.wxss */
.swipper-box {
    /* 1rpx = 0.5px */
    /* padding: 30rpx;     */
}

.swipper-box swiper {
    height: 350rpx;
}

.swipper-box swiper image {
    width: 100%;
    height: 100%;
}

.nav-box .nav {
    margin-top: 15rpx;
    height: 80rpx;
    width: 1400rpx;
    overflow: hidden;
}

.nav-box .nav .item {
    float: left;
    width: 120rpx;
    height: 60rpx;
    border: 2rpx solid #eee;
    font-size: 28rpx;
    line-height: 60rpx;
    border-radius: 10px;
    text-align: center;
    margin-left: 15rpx;
}

.nav-box .nav .item.current {
    color: #007ACC
}
.goods-list .item{
    display: flex;
    padding: 30rpx 20rpx;
    border-bottom: 2rpx solid #eee;
}
.goods-list .item .pic{
    width: 200rpx;
    height: 200rpx;
}
.goods-list .item .pic image{
    width: 200rpx;
    height: 200rpx;
}
.goods-list .item .content{
    margin-left: 20rpx;
}
.goods-list .item .content .title{
    height: 40%;
    font-size: 32rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
}
.goods-list .item .content .desc{
    height: 30%;
    margin-top:20rpx;
    font-size: 24rpx;
    color: #999;
}
.goods-list .item .content .price{
    height: 10%;
    font-size: 30rpx;
    color: #ff4d00;
}